generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Term {
  id   Int     @id @default(autoincrement())
  name String @db.VarChar(100) @unique
  posts TermRevision[]
  createdAt DateTime @default(now())
}

model TermRevision {
  id   Int     @id @default(autoincrement())
  term Term    @relation(fields: [termId], references: [id])
  termId Int
  description String?
  createdAt DateTime @default(now())
}
