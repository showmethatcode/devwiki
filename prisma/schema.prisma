datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Term {
  id           Int           @id @default(autoincrement())
  name         String        @unique @db.VarChar(100)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @default(now()) @updatedAt
  termRevision TermRevision?
  termPointer  TermPointer?
}

model TermRevision {
  id          Int          @id @default(autoincrement())
  description String?      @db.Text
  createdAt   DateTime     @default(now())
  term        Term         @relation(fields: [termId], references: [id])
  termId      Int          @unique
  TermPointer TermPointer?
}

model TermPointer {
  id             Int          @id @default(autoincrement())
  term           Term         @relation(fields: [termId], references: [id])
  termId         Int          @unique
  termRevision   TermRevision @relation(fields: [termRevisionId], references: [id])
  termRevisionId Int          @unique
  updatedAt      DateTime     @default(now()) @updatedAt

  @@unique([id, termId, termRevisionId])
  @@unique([id, termRevisionId])
}
